<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.App.PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item> <item name="cornerRadius">15dp</item>

        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="RoundedSquare" parent="">
        <item name="cornerSize">12dp</item>
    </style>

    <style name="EvaluationCardStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">180dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/bg_evaluation_card</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="EvaluationCardTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>