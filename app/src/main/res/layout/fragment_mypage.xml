<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:paddingBottom="20dp">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="마이페이지"
        android:textColor="@color/white"
        style="@style/Subtitle02_100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_my_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:text="MY"
        android:textColor="@color/white"
        style="@style/Subtitle01_100"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_profile_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_input_rounded"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_my_label">

        <TextView
            android:id="@+id/tv_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름"
            android:textColor="#AAAAAA"
            style="@style/Body01_100"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_name_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="사용자이름"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_name_label" />

        <ImageView
            android:id="@+id/btn_edit_name"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/playlist_result_editpencil"
            app:tint="@color/white"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_pref_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"
        android:text="내 취향 변경하기"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_profile_card" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_artist_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_mypage_back"
        android:paddingVertical="15dp"
        app:layout_constraintTop_toBottomOf="@id/tv_pref_title">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/group_artist_1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/group_artist_2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_artist_1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:cardCornerRadius="90dp"
                app:cardElevation="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/iv_artist_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:background="@color/gray700" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_artist_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가수1"
                style="@style/Body02_200"
                android:textColor="@color/white"
                android:gravity="center"
                android:maxLines="1"
                android:ellipsize="end"
                app:layout_constraintTop_toTopOf="@id/cv_artist_1"
                app:layout_constraintStart_toStartOf="@id/cv_artist_1"
                app:layout_constraintEnd_toEndOf="@id/cv_artist_1"
                app:layout_constraintBottom_toBottomOf="@id/cv_artist_1"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/group_artist_2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginHorizontal="1dp"
            app:layout_constraintStart_toEndOf="@+id/group_artist_1"
            app:layout_constraintEnd_toStartOf="@+id/group_artist_3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_artist_2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:cardCornerRadius="90dp"
                app:cardElevation="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/iv_artist_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:background="@color/gray700" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_artist_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가수2"
                style="@style/Body02_200"
                android:textColor="@color/white"
                android:gravity="center"
                android:maxLines="1"
                android:ellipsize="end"
                app:layout_constraintTop_toTopOf="@id/cv_artist_2"
                app:layout_constraintStart_toStartOf="@id/cv_artist_2"
                app:layout_constraintEnd_toEndOf="@id/cv_artist_2"
                app:layout_constraintBottom_toBottomOf="@id/cv_artist_2" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/group_artist_3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:layout_constraintStart_toEndOf="@+id/group_artist_2"
            app:layout_constraintEnd_toStartOf="@+id/group_edit"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_artist_3"
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:cardCornerRadius="90dp"
                app:cardElevation="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/iv_artist_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/gray700"
                    android:scaleType="centerCrop" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_artist_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가수3"
                style="@style/Body02_200"
                android:textColor="@color/white"
                android:gravity="center"
                android:maxLines="1"
                android:ellipsize="end"
                app:layout_constraintTop_toTopOf="@id/cv_artist_3"
                app:layout_constraintStart_toStartOf="@id/cv_artist_3"
                app:layout_constraintEnd_toEndOf="@id/cv_artist_3"
                app:layout_constraintBottom_toBottomOf="@id/cv_artist_3" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/group_edit"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/group_artist_3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/btn_edit_artist"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/playlist_result_editpencil"
                app:tint="@color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_genre_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_mypage_back"
        android:paddingVertical="15dp"
        app:layout_constraintTop_toBottomOf="@id/layout_artist_section">

        <TextView
            android:id="@+id/tv_genre_1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/bg_mypage_capsule"
            android:gravity="center"
            android:text="장르1"
            style="@style/Body02_200"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_genre_2" />

        <TextView
            android:id="@+id/tv_genre_2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/bg_mypage_capsule"
            android:gravity="center"
            android:text="장르2"
            style="@style/Body02_200"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_genre_1"
            app:layout_constraintEnd_toStartOf="@+id/tv_genre_3" />

        <TextView
            android:id="@+id/tv_genre_3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/bg_mypage_capsule"
            android:gravity="center"
            android:text="장르3"
            style="@style/Body02_200"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_genre_2"
            app:layout_constraintEnd_toStartOf="@+id/group_edit_genre" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/group_edit_genre"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/tv_genre_3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/btn_edit_genre"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/playlist_result_editpencil"
                app:tint="@color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>