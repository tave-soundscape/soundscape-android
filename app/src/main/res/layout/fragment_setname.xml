<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textColor="@color/white"
        android:textSize="18sp"
        style="@style/Subtitle02_100"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/layout_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="45dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title">

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:layout_marginEnd="5dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:background="#555555"
            android:layout_marginEnd="5dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:background="#555555"/>
    </LinearLayout>

    <View
        android:id="@+id/editmode_progress"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="45dp"
        android:visibility="gone"
        android:layout_marginHorizontal="20dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tv_title"/>

    <TextView
        android:id="@+id/tv_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="어떤 이름으로 시작할까요?"
        android:textColor="@color/white"
        android:textSize="24sp"
        style="@style/Title02_100"
        android:layout_marginTop="95dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <EditText
        android:id="@+id/get_name_input"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/bg_input_rounded"
        android:hint="이름을 입력해주세요."
        android:textColorHint="#888888"
        style="@style/Body01_200"
        android:textColor="@color/white"
        android:paddingHorizontal="20dp"
        android:textSize="16sp"
        android:inputType="textPersonName"
        android:maxLines="1"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_question"
        />


    <ImageView
        android:id="@+id/valid_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/onboarding_x"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/get_name_input"
        app:layout_constraintEnd_toEndOf="@id/get_name_input"
        app:layout_constraintTop_toTopOf="@id/get_name_input"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp" />

    <ImageView
        android:id="@+id/valid_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/onboarding_check"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/get_name_input"
        app:layout_constraintEnd_toEndOf="@id/get_name_input"
        app:layout_constraintTop_toTopOf="@id/get_name_input"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/nextButton"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginBottom="56dp"
        android:layout_marginHorizontal="20dp"
        android:backgroundTint="@color/black"
        android:text="다음으로"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:visibility="gone"
        style="@style/Body01_100"
        android:background="@drawable/bg_input_rounded"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ellipse"
        android:layout_width="500dp"
        android:layout_height="600dp"
        android:scaleType="centerCrop"
        android:scaleX="1.3"
        android:scaleY="1.4"
        android:src="@drawable/ellipse"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="524dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <!-- 텍스트 규칙 -->

    <TextView
        android:id="@+id/name_rule_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        style="@style/Body02_200"
        android:text="한글 1 ~ 10 자 / 영문 2 ~ 20자 이내"
        android:textColor="#4A494C"
        android:textSize="14sp"

        app:drawableStartCompat="@drawable/login_check"
        android:backgroundTint="#4A494C"
        android:drawablePadding="7dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/get_name_input" />

    <TextView
        android:id="@+id/name_rule_character"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        style="@style/Body02_200"
        android:text="특수문자 불가"
        android:textColor="#4A494C"
        android:textSize="14sp"

        app:drawableStartCompat="@drawable/login_check"
        android:backgroundTint="#4A494C"
        android:drawablePadding="7dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name_rule_length" />



</androidx.constraintlayout.widget.ConstraintLayout>

