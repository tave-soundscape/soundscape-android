<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_full_background"
    tools:context=".home.HomeFragment">
    

    <ImageView
        android:id="@+id/central_ellipse"
        android:layout_width="900dp"
        android:layout_height="900dp"
        android:layout_marginBottom="524dp"
        android:alpha="0.8"
        android:scaleType="centerCrop"
        android:scaleX="1.4"
        android:scaleY="1.4"

        android:src="@drawable/ellipse"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/some_id"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        android:gravity="center"
        android:text="오늘도 몰입을 시작해볼까요?"
        android:textColor="@color/white"
        android:textSize="24sp"
        style="@style/Title02_100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_subtitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:text="시작하기 버튼으로 플레이리스트\n추천을 받을 수 있어요"
        android:textColor="#B0AFB2"
        android:textSize="16sp"
        style="@style/Body01_200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/some_id" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/button_group_wrapper"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_subtitle2"
        app:layout_constraintWidth_percent="0.85"
        android:clipChildren="false">

        <ImageButton
            android:id="@+id/center_button"
            android:layout_width="142dp"
            android:layout_height="142dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/desc_make_dip_button"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/orb_animation"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/history_wrapper_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintCircle="@id/center_button"
            app:layout_constraintCircleAngle="0"
            app:layout_constraintCircleRadius="120dp"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/history_icon_1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/button_default_background"
                android:padding="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/place_icon1" />

            <TextView
                android:id="@+id/history_txt_1"
                style="@style/Caption01_200"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="카페\n위로"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/history_icon_1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/history_wrapper_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintCircle="@id/center_button"
            app:layout_constraintCircleAngle="60"
            app:layout_constraintCircleRadius="120dp"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/history_icon_2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/button_default_background"
                android:padding="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/place_icon2" />

            <TextView
                android:id="@+id/history_txt_2"
                style="@style/Caption01_200"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="코워킹\n협엽"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/history_icon_2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/history_wrapper_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintCircle="@id/center_button"
            app:layout_constraintCircleAngle="120"
            app:layout_constraintCircleRadius="120dp"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/history_icon_3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/button_default_background"
                android:padding="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/place_icon3" />

            <TextView
                android:id="@+id/history_txt_3"
                style="@style/Caption01_200"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="헬스장\n활력"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/history_icon_3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/history_wrapper_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintCircle="@id/center_button"
            app:layout_constraintCircleAngle="180"
            app:layout_constraintCircleRadius="120dp"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/history_icon_4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/button_default_background"
                android:padding="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/place_icon4" />

            <TextView
                android:id="@+id/history_txt_4"
                style="@style/Caption01_200"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="도서관\n집중"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/history_icon_4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/history_wrapper_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintCircle="@id/center_button"
            app:layout_constraintCircleAngle="240"
            app:layout_constraintCircleRadius="120dp"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/history_icon_5"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/button_default_background"
                android:padding="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/place_icon5" />

            <TextView
                android:id="@+id/history_txt_5"
                style="@style/Caption01_200"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="이동중\n미선택"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/history_icon_5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/history_wrapper_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintCircle="@id/center_button"
            app:layout_constraintCircleAngle="300"
            app:layout_constraintCircleRadius="120dp"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/history_icon_6"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/button_default_background"
                android:padding="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/place_icon6" />

            <TextView
                android:id="@+id/history_txt_6"
                style="@style/Caption01_200"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="공원\n휴식"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/history_icon_6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/startButton"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginBottom="56dp"
        android:layout_marginHorizontal="20dp"
        android:backgroundTint="@color/primary500"
        android:text="시작하기"
        android:textColor="@color/white"
        android:textSize="16sp"
        style="@style/Body01_100"
        android:layout_marginTop="60dp"
        android:background="@drawable/bg_input_rounded"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_group_wrapper"/>



</androidx.constraintlayout.widget.ConstraintLayout>