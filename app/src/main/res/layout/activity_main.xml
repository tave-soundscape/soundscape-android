<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/decibelText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이거 누르면 데시델 측정"
        android:textSize="20sp"
        android:layout_marginBottom="40dp"/>

    <Button
        android:id="@+id/measureButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#138EED"
        android:layout_marginBottom="20dp"
        android:text="데시벨 측정"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="3dp"
        android:layout_marginTop="20dp"
        android:background="#979696"/>

    <TextView
        android:id="@+id/infoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이거 누르면 스포티파이 음악 재생"
        android:textSize="20sp"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/tmpButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:backgroundTint="#28D31B"
        android:text="spotify 음악 연결"/>





</LinearLayout>