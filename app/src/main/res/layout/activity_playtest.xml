<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/black">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내 폰에서 바로 재생 (Web API)"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_track1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="20dp"
        app:cardBackgroundColor="#222222"
        app:cardCornerRadius="12dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <ImageView
                android:id="@+id/img_track1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="#555555"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/tv_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="엔믹스 앨범 전체 재생"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="15dp"
                app:layout_constraintStart_toEndOf="@id/img_track1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/tv_artist1"
                app:layout_constraintVertical_chainStyle="packed"/>

            <TextView
                android:id="@+id/tv_artist1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NMIXX"
                android:textColor="#AAAAAA"
                android:textSize="14sp"
                android:layout_marginStart="15dp"
                app:layout_constraintStart_toEndOf="@id/img_track1"
                app:layout_constraintTop_toBottomOf="@id/tv_title1"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_track2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="20dp"
        app:cardBackgroundColor="#222222"
        app:cardCornerRadius="12dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <ImageView
                android:id="@+id/img_track2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="#555555"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/tv_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Good Goodbye - 곡 하나 재생 "
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="15dp"
                app:layout_constraintStart_toEndOf="@id/img_track2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/tv_artist2"
                app:layout_constraintVertical_chainStyle="packed"/>

            <TextView
                android:id="@+id/tv_artist2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="화사"
                android:textColor="#AAAAAA"
                android:textSize="14sp"
                android:layout_marginStart="15dp"
                app:layout_constraintStart_toEndOf="@id/img_track2"
                app:layout_constraintTop_toBottomOf="@id/tv_title2"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_track3"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="20dp"
        app:cardBackgroundColor="#222222"
        app:cardCornerRadius="12dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <ImageView
                android:id="@+id/img_track3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="#555555"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/tv_title3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XOXZ - 아무것도 아님"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="15dp"
                app:layout_constraintStart_toEndOf="@id/img_track3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/tv_artist3"
                app:layout_constraintVertical_chainStyle="packed"/>

            <TextView
                android:id="@+id/tv_artist3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IVE"
                android:textColor="#AAAAAA"
                android:textSize="14sp"
                android:layout_marginStart="15dp"
                app:layout_constraintStart_toEndOf="@id/img_track3"
                app:layout_constraintTop_toBottomOf="@id/tv_title3"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_status_log"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="노래를 선택하면 재생됩니다. (Spotify 앱 켜두세요!)"
        android:textColor="#1ED760"
        android:gravity="center"
        android:layout_marginTop="20dp"/>

</LinearLayout>