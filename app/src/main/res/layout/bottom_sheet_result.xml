<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottom_sheet_rounded"
    android:padding="25dp">

    <TextView
        android:id="@+id/tvSheetTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="플레이리스트를 다시 생성할까요?"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSheetDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="현재 생성된 플레이리스트는 다시 복구할 수 없어요."
        android:textColor="#AAAAAA"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSheetTitle" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnClose"
        android:layout_width="100dp"
        android:layout_height="56dp"

        android:layout_marginTop="34dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="10dp"

        android:text="닫기"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"

        android:background="@drawable/bg_input_rounded"
        app:backgroundTint="@color/gray500"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnRegenerateConfirm"
        app:layout_constraintTop_toBottomOf="@id/tvSheetDesc"
        app:layout_constraintBottom_toBottomOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnRegenerateConfirm"
        android:layout_width="0dp"
        android:layout_height="56dp"

        android:layout_marginTop="34dp"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="10dp"

        android:text="다시하기"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"

        android:background="@drawable/bg_input_rounded"
        app:backgroundTint="@color/primary500"

        app:layout_constraintStart_toEndOf="@id/btnClose"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSheetDesc"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ProgressBar
        android:id="@+id/loadingProgressBar"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:indeterminateTint="@color/white"
        android:elevation="10dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>