<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/layout_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="45dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title">

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:layout_marginEnd="5dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:layout_marginEnd="5dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:background="@color/white"/>
    </LinearLayout>

    <TextView
        android:id="@+id/genre_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="좋아하는 장르 3개를\n 선택해볼까요?"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/layout_progress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <TextView
        android:id="@+id/genre_caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="취향은 언제든 변경이 가능해요."
        android:gravity="center_vertical"
        android:textColor="#B0AFB2"
        android:textSize="16sp"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/genre_question"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />




    <EditText
        android:id="@+id/search_genre"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="검색"
        android:backgroundTint="#3E3D41"
        android:textColorHint="#888888"
        android:textSize="16sp"
        android:paddingHorizontal="20dp"
        android:layout_marginHorizontal="20dp"
        android:drawableStart="@drawable/login_search"
        android:drawablePadding="7dp"

        app:layout_constraintTop_toBottomOf="@id/genre_caption"
        android:layout_marginTop="36dp"
        android:background="@drawable/bg_input_rounded"
        android:maxLines="1"
        android:textColor="@color/white" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_genre_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/search_genre"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingBottom="100dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:clipToPadding="false"/>


    <!-- 장르 3개 고르면 다음 버튼 활성화 -->
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/nextEllipse"
        android:layout_width="500dp"
        android:layout_height="600dp"
        android:scaleType="centerCrop"
        android:scaleX="1.3"
        android:scaleY="1.4"
        android:src="@drawable/ellipse"

        android:visibility="gone"

        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="524dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/initButton"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        android:text="초기화"
        android:textColor="@color/white"

        style="?android:attr/borderlessButtonStyle"
        android:visibility="gone"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="30dp" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/nextButton"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/black"
        android:text="다음으로"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginLeft="60dp"

        android:visibility="gone"

        android:background="@drawable/bg_input_rounded"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/initButton"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>