<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">


    <ImageView
        android:id="@+id/ivBlurBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="350dp"
        android:scaleType="centerCrop"
        android:alpha="1"
        tools:src="@drawable/ic_launcher_background"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="350dp"
        android:background="@drawable/bg_gradient"
        app:layout_constraintStart_toStartOf="@id/ivBlurBackground"
        app:layout_constraintEnd_toEndOf="@id/ivBlurBackground"
        app:layout_constraintTop_toTopOf="@id/ivBlurBackground"
        app:layout_constraintBottom_toBottomOf="@id/ivBlurBackground" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ellipse"
        android:layout_width="500dp"
        android:layout_height="600dp"
        android:layout_marginTop="580dp"
        android:scaleType="centerCrop"
        android:scaleX="1.3"
        android:scaleY="1.4"
        android:src="@drawable/ellipse"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.64"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTopTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="DIP Playlist"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tvPlaylistName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="플레이리스트 이름"
        android:gravity="center"
        app:layout_constrainedWidth="true"
        android:textColor="#FFFFFF"
        android:layout_marginHorizontal="16dp"
        style="@style/Subtitle02_100"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvTopTitle"
        android:layout_marginTop="70dp"/>

    <TextView
        android:id="@+id/tvPlaylistInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="장소 · 목표"
        android:textColor="#DDDDDD"
        style="@style/Body01_200"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPlaylistName" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btnDeepLinkSpotify"
        android:layout_width="178dp"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_result_rounded"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPlaylistInfo">

        <ImageView
            android:id="@+id/ivSpotifyIcon"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:adjustViewBounds="true"
            android:src="@drawable/playlist_reuslt_spotify"

            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvSpotifyText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp" />
        <TextView
            android:id="@+id/tvSpotifyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전체 듣기"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivSpotifyIcon"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vpGallery"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="10dp"
        android:paddingStart="80dp"
        android:paddingEnd="80dp"
        android:clipToPadding="false"
        android:clipChildren="false"
        app:layout_constraintTop_toBottomOf="@id/btnDeepLinkSpotify"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/blue_icon"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:src="@drawable/gallery_blue_icon"
        app:layout_constraintTop_toBottomOf="@id/vpGallery"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp" />


    <TextView
        android:id="@+id/tvCurrentTitle"
        android:layout_width="300dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="노래 제목"
        android:textColor="#FFFFFF"
        style="@style/Title02_100"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/blue_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvCurrentArtist"
        android:layout_width="300dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="가수 이름"
        android:textColor="#CCCCCC"
        style="@style/Body01_200"
        app:layout_constraintTop_toBottomOf="@id/tvCurrentTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



    <ImageView
        android:id="@+id/btnGalleryToList"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:src="@drawable/gallery_to_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        />


    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="15dp"
        android:src="@drawable/ic_back"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:tint="@color/white" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAddLibrary"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/bg_input_rounded"
        app:backgroundTint="@color/black"
        android:text="라이브러리 추가하기"
        android:textColor="@color/white"
        style="@style/Body01_100"
        app:iconGravity="textEnd"
        app:iconPadding="15dp"
        app:iconSize="14dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnMoveToLibrary"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:visibility="gone"
        android:background="@drawable/bg_input_rounded"
        app:backgroundTint="@color/black"
        android:text="라이브러리 이동하기"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:iconGravity="textEnd"
        app:iconPadding="15dp"
        app:iconSize="14dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>