<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_full_background"
    tools:context=".home.HomeFragment">


    <ImageView
        android:id="@+id/central_ellipse"
        android:layout_width="900dp"
        android:layout_height="900dp"
        android:layout_marginBottom="524dp"
        android:alpha="0.8"
        android:scaleType="centerCrop"
        android:scaleX="1.4"
        android:scaleY="1.4"

        android:src="@drawable/ellipse"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/some_id"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        android:gravity="center"
        android:text="오늘도 몰입을 시작해볼까요?"
        android:textColor="@color/white"
        android:textSize="24sp"
        style="@style/Title02_100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_subtitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:text="시작하기 버튼으로 플레이리스트\n추천을 받을 수 있어요"
        android:textColor="#B0AFB2"
        android:textSize="16sp"
        style="@style/Body01_200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/some_id" />

    <LinearLayout
        android:id="@+id/tab_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_tab_container"
        android:orientation="horizontal"
        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_subtitle2">

        <TextView
            android:id="@+id/btn_recommend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingVertical="8dp"
            android:text="추천 받기"
            android:textColor="@color/gray300"
            style="@style/Body02_200" />

        <TextView
            android:id="@+id/btn_recent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_tab_selected_white"
            android:paddingHorizontal="20dp"
            android:paddingVertical="8dp"
            android:layout_margin="2dp"
            android:text="최근 몰입"
            android:textColor="@color/black"
            style="@style/Body02_200" />
    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/button_group_wrapper"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"

        android:paddingTop="48dp"
        android:paddingBottom="48dp"

        android:clipChildren="false"
        android:clipToPadding="false"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tab_container"
        app:layout_constraintWidth_percent="0.85">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/history_wrapper_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/history_icon_0"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:background="@drawable/button_default_background"
                android:padding="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/place_icon1" />

            <TextView
                android:id="@+id/history_txt_0"
                style="@style/Caption01_200"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/history_icon_0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/history_wrapper_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintCircle="@id/history_wrapper_0"
            app:layout_constraintCircleAngle="0"
            app:layout_constraintCircleRadius="112dp"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/history_icon_1"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:background="@drawable/button_default_background"
                android:padding="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/place_icon1" />

            <TextView
                android:id="@+id/history_txt_1"
                style="@style/Caption01_200"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/history_icon_1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/history_wrapper_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintCircle="@id/history_wrapper_0"
            app:layout_constraintCircleAngle="60"
            app:layout_constraintCircleRadius="112dp"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/history_icon_2"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:background="@drawable/button_default_background"
                android:padding="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/place_icon2" />

            <TextView
                android:id="@+id/history_txt_2"
                style="@style/Caption01_200"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/history_icon_2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/history_wrapper_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintCircle="@id/history_wrapper_0"
            app:layout_constraintCircleAngle="120"
            app:layout_constraintCircleRadius="112dp"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/history_icon_3"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:background="@drawable/button_default_background"
                android:padding="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/place_icon3" />

            <TextView
                android:id="@+id/history_txt_3"
                style="@style/Caption01_200"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/history_icon_3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/history_wrapper_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintCircle="@id/history_wrapper_0"
            app:layout_constraintCircleAngle="180"
            app:layout_constraintCircleRadius="112dp"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/history_icon_4"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:background="@drawable/button_default_background"
                android:padding="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/place_icon4" />

            <TextView
                android:id="@+id/history_txt_4"
                style="@style/Caption01_200"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/history_icon_4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/history_wrapper_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintCircle="@id/history_wrapper_0"
            app:layout_constraintCircleAngle="240"
            app:layout_constraintCircleRadius="112dp"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/history_icon_5"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:background="@drawable/button_default_background"
                android:padding="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/place_icon5" />

            <TextView
                android:id="@+id/history_txt_5"
                style="@style/Caption01_200"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/history_icon_5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/history_wrapper_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintCircle="@id/history_wrapper_0"
            app:layout_constraintCircleAngle="300"
            app:layout_constraintCircleRadius="112dp"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/history_icon_6"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:background="@drawable/button_default_background"
                android:padding="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/place_icon6" />

            <TextView
                android:id="@+id/history_txt_6"
                style="@style/Caption01_200"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/history_icon_6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>