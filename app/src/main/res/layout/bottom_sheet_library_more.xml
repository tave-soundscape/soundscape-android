<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottom_sheet_rounded"
    android:padding="20dp">

    <ImageView
        android:id="@+id/btnClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/onboarding_x"
        android:padding="5dp"
        app:tint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:id="@+id/girdLayout"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:columnCount="2"
        android:layout_marginTop="49dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnClose"
        android:rowCount="2">
        <ImageView android:id="@+id/ivCover1" android:layout_width="18dp" android:layout_height="18dp" android:scaleType="centerCrop" android:src="@drawable/ic_launcher_background"/>
        <ImageView android:id="@+id/ivCover2" android:layout_width="18dp" android:layout_height="18dp" android:scaleType="centerCrop" android:src="@drawable/ic_launcher_background"/>
        <ImageView android:id="@+id/ivCover3" android:layout_width="18dp" android:layout_height="18dp" android:scaleType="centerCrop" android:src="@drawable/ic_launcher_background"/>
        <ImageView android:id="@+id/ivCover4" android:layout_width="18dp" android:layout_height="18dp" android:scaleType="centerCrop" android:src="@drawable/ic_launcher_background"/>
    </GridLayout>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="플레이리스트 이름ndkkkkkdkkkkkkkkkkk"
        android:textColor="#FFFFFF"
        style="@style/Body01_100"
        android:layout_marginTop="55dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@id/girdLayout"
        app:layout_constraintTop_toTopOf="@id/btnClose" />


    <TextView
        android:id="@+id/tvEditName"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:gravity="center_vertical"
        android:text="플레이리스트 이름 수정하기"
        android:layout_marginTop="37dp"
        android:textColor="@color/white"
        style="@style/Body01_100"
        app:layout_constraintTop_toBottomOf="@id/girdLayout"/>

    <TextView
        android:id="@+id/tvDelete"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:gravity="center_vertical"
        android:text="플레이리스트 삭제하기"
        android:layout_marginTop="32dp"
        android:textColor="@color/white"
        style="@style/Body01_100"
        app:layout_constraintTop_toBottomOf="@id/tvEditName"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/tvDelete" />


</androidx.constraintlayout.widget.ConstraintLayout>